<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<servlet>
		<servlet-name>QuestionServlet</servlet-name>
		<display-name>QuestionServlet</display-name>
		<description></description>
		<servlet-class>main.java.browniepoints.servlet.QuestionServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>LoginServlet</servlet-name>
		<display-name>LoginServlet</display-name>
		<description></description>
		<servlet-class>main.java.browniepoints.servlet.LoginServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AnswerServlet</servlet-name>
		<display-name>AnswerServlet</display-name>
		<description></description>
		<servlet-class>main.java.browniepoints.servlet.AnswerServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>HomeServlet</servlet-name>
		<display-name>HomeServlet</display-name>
		<description></description>
		<servlet-class>main.java.browniepoints.servlet.HomeServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>AddQuestionServlet</servlet-name>
		<display-name>AddQuestionServlet</display-name>
		<description></description>
		<servlet-class>main.java.browniepoints.servlet.AddQuestionServlet</servlet-class>
	</servlet>	
	<servlet-mapping>
		<servlet-name>QuestionServlet</servlet-name>
		<url-pattern>/q</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>HomeServlet</servlet-name>
		<url-pattern>/main</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>LoginServlet</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>	
	<servlet-mapping>
		<servlet-name>AnswerServlet</servlet-name>
		<url-pattern>/a</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>AddQuestionServlet</servlet-name>
		<url-pattern>/aq</url-pattern>
	</servlet-mapping>

</web-app>
